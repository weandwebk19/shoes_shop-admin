<div class="main-content">
    {{>header}}

    <!-- page title area start -->
    <div class="page-title-area">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <div class="breadcrumbs-area clearfix">
                    <h4 class="page-title pull-left">Dead Shoes</h4>
                    <ul class="breadcrumbs pull-left">
                        <li><a href="/account_customer">Quản lý tài khoản</a></li>
                        <li><span>Thêm tài khoản</span></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-6 clearfix">
                <ul class="notification-area pull-right">
                    <li id="full-view"><i class="ti-fullscreen"></i></li>
                    <li id="full-view-exit"><i class="ti-zoom-out"></i></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- page title area end -->
    <div class="main-content-inner">
        <div class="row">
            <div class="col-12 mt-5">
                <div class="card">
                    <div class="card-body">
                        <!-- Add account_customer form-->
                        <div class="login-box ptb--100">
                            <form method="POST" action="/account_customer/store" class="needs-validation mt-3"
                                novalidate="">
                                <div class="login-form-head">
                                    <h4>Thêm tài khoản</h4>
                                    <p>Đăng ký tài khoản cho khách hàng.</p>
                                </div>
                                <div class="login-form-body">
                                    <div class="form-gp">
                                        <label for="register-name">Họ tên</label>
                                        <input type="text" id="register-name" name="name">
                                        <i class="ti-user"></i>
                                        <div class="text-danger"></div>
                                    </div>
                                    <div class="form-gp">
                                        <label for="register-email">Email</label>
                                        <input type="email" id="register-email" name="email">
                                        <i class="ti-email"></i>
                                        <div class="text-danger"></div>
                                    </div>
                                    <div class="form-gp">
                                        <label for="register-phone">Số điện thoại</label>
                                        <input type="tel" id="register-phone" name="phone" required="">
                                        <i class="ti-mobile"></i>
                                        <div class="text-danger"></div>
                                    </div>
                                    <div class="form-gp">
                                        <label for="register-username">Username</label>
                                        <input type="text" id="register-username" name="username" required="">
                                        <i class="ti-user"></i>
                                        <div class="text-danger"></div>
                                    </div>
                                    <div class="form-gp">
                                        <label for="register-password1">Password</label>
                                        <input type="password" id="register-password1" name="password" required="">
                                        <i class="ti-lock"></i>
                                        <div class="text-danger"></div>
                                    </div>
                                    <div class="form-gp">
                                        <label for="register-password2">Confirm Password</label>
                                        <input type="password" id="register-password2" name="confirmPassword">
                                        <i class="ti-lock"></i>
                                        <div class="text-danger"></div>
                                    </div>
                                    {{#wrongPassword}}
                                    <div class="form-gp">
                                        <b style="color: #dc3545">Mật khẩu không trùng khớp !</b>
                                    </div>
                                    {{/wrongPassword}}
                                    <div class="submit-btn-area">
                                        <button id="form_submit" type="submit">Submit <i
                                                class="ti-arrow-right"></i></button>

                                    </div>
                                </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<!-- jquery latest version -->
<script src="/js/vendor/jquery-2.2.4.min.js"></script>
<!-- bootstrap 4 js -->
<script src="/js/popper.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/owl.carousel.min.js"></script>
<script src="/js/metisMenu.min.js"></script>
<script src="/js/jquery.slimscroll.min.js"></script>
<script src="/js/jquery.slicknav.min.js"></script>

<!-- others plugins -->
<script src="/js/plugins.js"></script>
<script src="/js/scripts.js"></script>