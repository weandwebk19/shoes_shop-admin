<!-- main content area start -->
<div class="main-content">
    {{>header}}
    <!-- page title area start -->
    <div class="page-title-area">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <div class="breadcrumbs-area clearfix">
                    <h4 class="page-title pull-left">Dead Shoes</h4>
                    <ul class="breadcrumbs pull-left">
                        <li><a href="#">Tài khoản</a></li>
                        <li><span>Tài khoản khách hàng</span></li>
                    </ul>
                </div>
            </div>
           <div class="col-sm-6 clearfix">
                <ul class="notification-area pull-right">
                    <li id="full-view"><i class="ti-fullscreen"></i></li>
                    <li id="full-view-exit"><i class="ti-zoom-out"></i></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- page title area end -->
    <div class="main-content-inner">
        <div class="row">
            <!-- Primary table start -->
            <div class="col-12 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Danh sách tài khoản khách hàng</h4>
                        <div class="data-tables datatable-primary">
                            <table id="dataTable2" class="text-center">
                                <thead class="text-capitalize">
                                    <tr>
                                        <th>Mã khách hàng</th>
                                        <th>Username</th>
                                        <th>Tên khách hàng</th>
                                        <th>Số điện thoại</th>
                                        <th>Email</th>
                                        <th>Tác vụ</th>
                                        <th>Password</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each account_customers}}
                                    <tr>
                                        <td>{{this.customerid}}</td>
                                        <td>{{this.username}}</td>
                                        <td>{{this.customer.name}}</td>
                                        <td>{{this.customer.phone}}</td>
                                        <td>{{this.customer.email}}</td>
                                        <td>
                                            <a href="/account_customer/{{this.customerid}}/edit" class="edit-data"
                                                title="Chỉnh sửa tài khoản khách hàng">
                                                <i class="fa fa-edit"></i>

                                                <a href="" class="remove-data" title="Xóa tài khoản khách hàng"
                                                    data-id="{{this.customerid}}" data-toggle="modal"
                                                    data-target="#delete-account_customer-modal"><i
                                                        class="fa fa-remove"></i></a>
                                        </td>
                                        <td>
                                            {{this.password}}
                                            <p><b>Thời gian tạo :</b> {{this.createdAt}}</p>
                                            <p><b>Sửa gần nhất :</b> {{this.updatedAt}}</p> 
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <a href="/account_customer/create" class="text-white btn btn-primary mb-3">Thêm tài khoản</a>
                    </div>
                </div>
            </div>
            <!-- Primary table end -->
        </div>
    </div>
</div>
<!-- main content area end -->

{{!-- Delete account_customer hidden form--}}
<form name="delete-account_customer-form" method="POST"></form>

{{!-- Confirm delete account_customer --}}
<div id="delete-account_customer-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa tài khoản khách hàng ?</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <p>Bạn chắc chắn muốn xóa tài khoản khách hàng này?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btn-delete-account_customer">Xóa bỏ</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function (e) {
        var account_customerId;

        //Variable delete account_customer
        var btnDeleteAccount_customer = document.getElementById("btn-delete-account_customer");
        var deleteAccount_customerForm = document.forms["delete-account_customer-form"];

        //Delete account_customer
        $('#delete-account_customer-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            account_customerId = button.data('id')
        })

        btnDeleteAccount_customer.onclick = function () {
            deleteAccount_customerForm.action = `/account_customer/${account_customerId}?_method=DELETE`;
            deleteAccount_customerForm.submit();
        }
    })
</script>

