<div class="main-content">
    {{>header}}

    <!-- page title area start -->
    <div class="page-title-area">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <div class="breadcrumbs-area clearfix">
                    <h4 class="page-title pull-left">Dead Shoes</h4>
                    <ul class="breadcrumbs pull-left">
                        <li><a href="/product">Quản lý sản phẩm</a></li>
                        <li><span>Chỉnh sửa sản phẩm</span></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-6 clearfix">
                <ul class="notification-area pull-right">
                    <li id="full-view"><i class="ti-fullscreen"></i></li>
                    <li id="full-view-exit"><i class="ti-zoom-out"></i></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- page title area end -->
    <div class="main-content-inner">
        <div class="row">
            <div class="col-12 mt-5">
                <div class="card">
                    <div class="card-body">
                        <!-- Edit product form-->
                        <h4 class="header-title">Chỉnh Sửa sản phẩm</h4>
                        <form method="POST" action="/product/{{product.productid}}?_method=PUT" class="needs-validation mt-3" novalidate="">
                            <div class="form-row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <label for="product-name">Tên sản phẩm</label>
                                        <input type="text" class="form-control" id="product-name" name="productname"
                                            required="" value="{{product.productname}}">
                                        <div class="invalid-feedback">Please provide a valid state.</div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <label for="product-price">Giá</label>
                                        <input type="text" class="form-control" id="product-price" name="price"
                                            required="" value="{{product.price}}">
                                        <div class="invalid-feedback">Please provide a valid state.</div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <label for="product-color">Màu sắc</label>
                                        <input type="text" class="form-control" id="product-color" name="color"
                                            aria-describedby="inputGroupPrepend" required="" value="{{product.color}}">
                                        <div class="invalid-feedback">Please provide a valid state.</div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <label for="product-status">Tình trạng</label>
                                        <input type="text" class="form-control" id="product-status" name="status"
                                            aria-describedby="inputGroupPrepend" required="" value="{{product.status}}">
                                        <div class="invalid-feedback">Please provide a valid state.</div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-4 mb-3">
                                    <div class="form-group mb-3">
                                        <label for="product-image-1">Hình ảnh 1</label>
                                        <input type="text" class="form-control" id="product-image-1" name="image1"
                                            aria-describedby="inputGroupPrepend" required="" value="{{product.image.[0]}}">
                                        <div class="invalid-feedback">Please provide a valid state.</div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="form-group mb-3">
                                        <label for="product-image-2">Hình ảnh 2</label>
                                        <input type="text" class="form-control" id="product-image-2" name="image2"
                                            aria-describedby="inputGroupPrepend" required="" value="{{product.image.[1]}}">
                                        <div class="invalid-feedback">Please provide a valid state.</div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="form-group mb-3">
                                        <label for="product-image-3">Hình ảnh 3</label>
                                        <input type="text" class="form-control" id="product-image-3" name="image3"
                                            aria-describedby="inputGroupPrepend" required="" value="{{product.image.[2]}}">
                                        <div class="invalid-feedback">Please provide a valid state.</div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col mb-3">
                                    <div class="form-group input-group-prepend mb-3">
                                        <label for="product-description" class="input-group-text">Mô tả <br> sản
                                            phẩm</label>
                                        <textarea class="form-control" aria-label="With textarea"
                                            id="product-description" name="description" required="">{{product.description}}</textarea>
                                        <div class="invalid-feedback">Please provide a valid state.</div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary" type="submit">Cập nhật</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- jquery latest version -->
<script src="/js/vendor/jquery-2.2.4.min.js"></script>
<!-- bootstrap 4 js -->
<script src="/js/popper.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/owl.carousel.min.js"></script>
<script src="/js/metisMenu.min.js"></script>
<script src="/js/jquery.slimscroll.min.js"></script>
<script src="/js/jquery.slicknav.min.js"></script>

<!-- others plugins -->
<script src="/js/plugins.js"></script>
<script src="/js/scripts.js"></script>