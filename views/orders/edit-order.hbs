<div class="main-content">
    {{>header}}

    <!-- page title area start -->
    <div class="page-title-area">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <div class="breadcrumbs-area clearfix">
                    <h4 class="page-title pull-left">Dead Shoes</h4>
                    <ul class="breadcrumbs pull-left">
                        <li><a href="/product">Quản lý đơn hàng</a></li>
                        <li><span>Chỉnh sửa đơn hàng</span></li>
                    </ul>
                </div>
            </div>
             <div class="col-sm-6 clearfix">
                <ul class="notification-area pull-right">
                    <li id="full-view"><i class="ti-fullscreen"></i></li>
                    <li id="full-view-exit"><i class="ti-zoom-out"></i></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- page title area end -->
    <div class="main-content-inner">
        <div class="row">
            <div class="col-12 mt-5">
                <div class="card">
                    <div class="card-body">
                        <!-- Edit order form-->
                        <h4 class="header-title">Chỉnh Sửa đơn hàng</h4>
                        <form method="POST" action="/order/{{order.orderid}}?_method=PUT" class="needs-validation mt-3"
                            novalidate="">
                            <div class="form-row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <label for="order-customer-name">Tên khách hàng</label>
                                        <input type="text" class="form-control" id="order-customer-name"
                                            name="customername" value="{{customer.name}}" required="">
                                        <div class="invalid-feedback">
                                            Please choose a name.
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <label for="order-customer-phone">Số điện thoại khách hàng</label>
                                        <input class="form-control" type="tel" id="order-customer-phone"
                                            name="customerphone" value="{{customer.phone}}" required="">
                                        <div class="invalid-feedback">
                                            Please choose a name.
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <label for="order-customer-address">Địa chỉ</label>
                                        <input type="text" class="form-control" id="order-customer-address"
                                            name="customeraddress" value="{{customer.address}}" required="">
                                        <div class="invalid-feedback">
                                            Please choose a address.
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <label for="order-customer-email">Email</label>
                                        <input class="form-control" type="email" id="order-customer-email"
                                            name="customeremail" value="{{customer.email}}">
                                    </div>
                                </div>
                            </div>
                            {{#each orderProducts}}
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="order-productid">Mã sản phẩm</label>
                                        <input type="text" class="form-control" id="order-productid" name="productid" value="{{this.productid}}" readonly>
                                        
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="order-amount">Số lượng</label>
                                        <input class="form-control" type="number" id="order-amount"
                                            name="amount" value="{{this.amount}}">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="order-product-size">Kích thước</label>
                                        <select id="order-product-size" class="form-control pb-1" name="size">
                                            <option value="{{this.size}}">{{this.size}}</option>
                                            <option value="35">35</option>
                                            <option value="36">36</option>
                                            <option value="37">37</option>
                                            <option value="38">38</option>
                                            <option value="39">39</option>
                                            <option value="40">40</option>
                                            <option value="42">41</option>
                                            <option value="42">42</option>
                                            <option value="43">43</option>
                                            <option value="44">44</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                            <div class="form-group">
                                <button class="btn btn-primary" type="submit">Cập nhật</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>