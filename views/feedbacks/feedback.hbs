<!-- main content area start -->
<div class="main-content">
    {{>header}}

    <!-- page title area start -->
    <div class="page-title-area">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <div class="breadcrumbs-area clearfix">
                    <h4 class="page-title pull-left">Dead Shoes</h4>
                    <ul class="breadcrumbs pull-left">
                        <li><a href="/">Home</a></li>
                        <li><span>feedback</span></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-6 clearfix">
                <ul class="notification-area pull-right">
                    <li id="full-view"><i class="ti-fullscreen"></i></li>
                    <li id="full-view-exit"><i class="ti-zoom-out"></i></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- page title area end -->
    <div class="main-content-inner">
        <div class="row">
            <!-- table primary start -->
            <div class="col-12 mt-5">
                <div class="card">
                    <div class="card-body border-bottom">
                        <div class="d-flex justify-content-between">
                            <a href="/feedback/trash" class="text-white btn btn-secondary" role="button">
                                <i class="fa fa-trash mr-2 ml-2"></i>
                                Thùng rác
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Danh sách feedback</h4>
                        <div class="data-tables datatable-primary">
                            <table id="dataTable2" class="text-center">
                                <thead class="text-capitalize">
                                    <tr>
                                        <th>Mã feedback</th>
                                        <th>Họ tên khách hàng</th>
                                        <th>Nội dung</th>
                                        <th>Số điện thoại</th>
                                        <th>Email</th>
                                        <th>Địa chỉ</th>
                                        <th>Tác vụ</th>
                                        <th>Chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each feedbacks}}
                                    <tr>
                                        <td>{{this.feedbackid}}</td>
                                        <td>{{this.customer_name}}</td>
                                        <td>{{this.content}}</td>
                                        <td>{{this.phone}}</td>
                                        <td>{{this.email}}</td>
                                        <td>{{this.address}}</td>
                                        <td>
                                            <a href="/feedback/{{this.feedbackid}}/edit" class="edit-data"
                                                title="Chỉnh sửa feedback">
                                                <i class="fa fa-edit"></i>

                                                <a href="" class="remove-data" title="Xóa feedback"
                                                    data-id="{{this.feedbackid}}" data-toggle="modal"
                                                    data-target="#delete-feedback-modal"><i
                                                        class="fa fa-remove"></i></a>
                                        </td>
                                        <td>
                                            <p><b>Thời gian tạo :</b> {{this.createdAt}}</p>
                                            <p><b>Sửa gần nhất :</b> {{this.updatedAt}}</p>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- table primary end -->
        </div>
    </div>
</div>
<!-- main content area end -->

{{!-- Delete feedback hidden form--}}
<form name="delete-feedback-form" method="POST"></form>

{{!-- Confirm delete feedback --}}
<div id="delete-feedback-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa feedback?</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <p>Bạn chắc chắn muốn xóa feedback này?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btn-delete-feedback">Xóa bỏ</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function (e) {
        var feedbackId;
        //Variable delete feedback
        var btnDeleteFeedback = document.getElementById("btn-delete-feedback");
        var deleteFeedbackForm = document.forms["delete-feedback-form"];

        //Delete feedback
        $('#delete-feedback-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            feedbackId = button.data('id')
        })

        btnDeleteFeedback.onclick = function () {
            deleteFeedbackForm.action = `/feedback/${feedbackId}?_method=DELETE`;
            deleteFeedbackForm.submit();
        }
    })
</script>
