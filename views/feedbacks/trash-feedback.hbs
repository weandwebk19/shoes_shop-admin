<div class="main-content">
    {{>header}}

    <!-- page title area start -->
    <div class="page-title-area">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <div class="breadcrumbs-area clearfix">
                    <h4 class="page-title pull-left">Dead Shoes</h4>
                    <ul class="breadcrumbs pull-left">
                        <li><a href="/feedback">Quản lý feedback</a></li>
                        <li><span>Feedback đã xóa</span></li>
                    </ul>
                </div>
            </div>
             <div class="col-sm-6 clearfix">
                <ul class="notification-area pull-right">
                    <li id="full-view"><i class="ti-fullscreen"></i></li>
                    <li id="full-view-exit"><i class="ti-zoom-out"></i></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- page title area end -->
    <div class="main-content-inner">
        <div class="row">
            <!-- Danh sáchfeedback start -->
            <div class="col-12 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Danh sách feedback</h4>
                        <div class="data-tables datatable-primary">
                            <table id="dataTable2" class="text-center">
                                <thead class="text-capitalize">
                                    <tr>
                                        <th>Mã feedback</th>
                                        <th>Họ tên khách hàng</th>
                                        <th>Số điện thoại</th>
                                        <th>Email</th>
                                        <th>Địa chỉ</th>
                                        <th>Thời gian xóa</th>
                                        <th>Khôi phục / Xóa</th>
                                        <th>Nội dung</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each feedbacks}}
                                    <tr>
                                        <td>{{this.feedbackid}}</td>
                                        <td>{{this.customer_name}}</td>
                                        <td>{{this.phone}}</td>
                                        <td>{{this.email}}</td>
                                        <td>{{this.address}}</td>
                                        <td>{{this.deletedAt}}</td>

                                        <td>
                                            <a href="" class="btn-restore-feedback mr-3" data-id="{{this.feedbackid}}"
                                            title="Khôi phục feedback"><i class="fa fa-reply"></i></a>

                                            <a href="" class="remove-data" title="Xóa vĩnh viễn"
                                                data-id="{{this.feedbackid}}" data-toggle="modal"
                                                data-target="#delete-feedback-modal"><i class="fa fa-remove"></i></a>
                                        </td>
                                        <td>{{this.content}}</td>

                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Danh sáchfeedback end -->
        </div>
    </div>
</div>

{{!-- Deletefeedback hidden form--}}
<form name="delete-feedback-form" method="POST"></form>
{{!-- restorefeedback hidden form--}}
<form name="restore-feedback-form" method="POST"></form>

{{!-- Confirm deletefeedback --}}
<div id="delete-feedback-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa vĩnh viễn feedback?</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <p>Hành động này không thể khôi phục. Bạn vẫn muốn xóa feedback này vĩnh viễn?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btn-delete-feedback">Xóa bỏ</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function (e) {
        var feedbackId;
        var restoreFeedbackBtn = $('.btn-restore-feedback');
        var btnDeleteFeedback = document.getElementById("btn-delete-feedback");
        var deleteFeedbackForm = document.forms["delete-feedback-form"];
        var restoreFeedbackForm = document.forms["restore-feedback-form"];

        //Deletefeedback
        $('#delete-feedback-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
           feedbackId = button.data('id')
        })

        btnDeleteFeedback.onclick = function () {
            deleteFeedbackForm.action = `/feedback/${feedbackId}/force?_method=DELETE`;
            deleteFeedbackForm.submit();
        }
        //Restore btnfeedback click
        restoreFeedbackBtn.click( function(e){
          e.preventDefault();
          var feedbackId = $(this).data('id');
          restoreFeedbackForm.action= `/feedback/${feedbackId}/restore?_method=PATCH`;
          restoreFeedbackForm.submit();
        });
    })
</script>

