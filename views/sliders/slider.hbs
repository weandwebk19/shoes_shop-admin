<!-- main content area start -->
<div class="main-content">
    {{>header}}

    <!-- page title area start -->
    <div class="page-title-area">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <div class="breadcrumbs-area clearfix">
                    <h4 class="page-title pull-left">Dead Shoes</h4>
                    <ul class="breadcrumbs pull-left">
                        <li><a href="/">Home</a></li>
                        <li><span>Slider</span></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-6 clearfix">
                <ul class="notification-area pull-right">
                    <li id="full-view"><i class="ti-fullscreen"></i></li>
                    <li id="full-view-exit"><i class="ti-zoom-out"></i></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- page title area end -->
    <div class="main-content-inner">
        <div class="row">
            <!-- table primary start -->
            <div class="col-12 mt-5">
                <div class="card">
                    <div class="card-body border-bottom">
                        <div class="d-flex justify-content-between">
                            <a href="/slider/create" class="text-white btn btn-primary" role="button">Thêm slider</a>
                            <a href="/slider/trash" class="text-white btn btn-secondary" role="button">
                                <i class="fa fa-trash mr-2 ml-2"></i>
                                Thùng rác
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Sliders</h4>
                        <div class="single-table">
                            <div class="table-responsive">
                                <table class="table text-center">
                                    <thead class="text-uppercase bg-primary">
                                        <tr class="text-white">
                                            <th scope="col-md-3">Hình ảnh</th>
                                            <th scope="col-md-3">Mô tả</th>
                                            <th scope="col-md-3">Tiêu đề</th>
                                            <th scope="col-md-3">Sửa / Xóa</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each sliders}}
                                        <tr class="row-fluid">
                                            <td class="col-md-7">
                                                <img class="col slider-img" src="{{this.image}}" class="img-fluid"
                                                    alt="slider-image">
                                            </td>
                                            <td class="col-md-3">{{this.description}}</td>
                                            <td class="col-md-1">{{this.title}}</td>
                                            <td class="col-md-1">
                                                <a href="/slider/{{this.sliderid}}/edit" class="edit-data"
                                                    title="Chỉnh sửa slider">
                                                    <i class="fa fa-edit"></i>
                                                </a>

                                                <a href="" class="remove-data" title="Xóa slider"
                                                    data-id="{{this.sliderid}}" data-toggle="modal"
                                                    data-target="#delete-slider-modal"><i class="fa fa-remove"></i></a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- table primary end -->
        </div>
    </div>
</div>
<!-- main content area end -->

{{!-- Delete slider hidden form--}}
<form name="delete-slider-form" method="POST"></form>

{{!-- Confirm delete slider --}}
<div id="delete-slider-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa slider?</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <p>Bạn chắc chắn muốn xóa slider này?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btn-delete-slider">Xóa bỏ</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function (e) {
        var sliderId;
        //Variable delete slider
        var btnDeleteSlider = document.getElementById("btn-delete-slider");
        var deleteSliderForm = document.forms["delete-slider-form"];

        //Delete slider
        $('#delete-slider-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            sliderId = button.data('id')
        })

        btnDeleteSlider.onclick = function () {
            deleteSliderForm.action = `/slider/${sliderId}?_method=DELETE`;
            deleteSliderForm.submit();
        }
    })
</script>
<!-- jquery latest version -->
<script src="/js/vendor/jquery-2.2.4.min.js"></script>
<!-- bootstrap 4 js -->
<script src="/js/popper.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/owl.carousel.min.js"></script>
<script src="/js/metisMenu.min.js"></script>
<script src="/js/jquery.slimscroll.min.js"></script>
<script src="/js/jquery.slicknav.min.js"></script>

<!-- others plugins -->
<script src="/js/plugins.js"></script>
<script src="/js/scripts.js"></script>
</body>

</html>