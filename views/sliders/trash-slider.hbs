<div class="main-content">
    {{>header}}

    <!-- page title area start -->
    <div class="page-title-area">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <div class="breadcrumbs-area clearfix">
                    <h4 class="page-title pull-left">Dead Shoes</h4>
                    <ul class="breadcrumbs pull-left">
                        <li><a href="/slider">Quản lý slider</a></li>
                        <li><span>slider đã xóa</span></li>
                    </ul>
                </div>
            </div>
             <div class="col-sm-6 clearfix">
                <ul class="notification-area pull-right">
                    <li id="full-view"><i class="ti-fullscreen"></i></li>
                    <li id="full-view-exit"><i class="ti-zoom-out"></i></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- page title area end -->
    <div class="main-content-inner">
        <div class="row">
            <!-- Danh sách slider start -->
            <div class="col-12 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Danh sách slider đã xóa</h4>
                        <div class="data-tables datatable-primary">
                            <table class="table text-center">
                                    <thead class="text-uppercase bg-primary">
                                        <tr class="text-white">
                                            <th scope="col-md-3">Hình ảnh</th>
                                            <th scope="col-md-3">Mô tả</th>
                                            <th scope="col-md-3">Tiêu đề</th>
                                            <th scope="col-md-3">Khôi phục/ Xóa</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each sliders}}
                                        {{#if ./deletedAt}}
                                        <tr class="row-fluid">
                                            <td class="col-md-7">
                                                <img class="col slider-img" src="{{this.image}}" class="img-fluid"
                                                    alt="slider-image">
                                            </td>
                                            <td class="col-md-3">{{this.description}}</td>
                                            <td class="col-md-1">{{this.title}}</td>
                                            <td class="col-md-1">
                                                <a href="" class="btn-restore-slider mr-3" data-id="{{this.sliderid}}"
                                            title="Khôi phục slider"><i class="fa fa-reply"></i></a>

                                            <a href="" class="remove-data" title="Xóa vĩnh viễn"
                                                data-id="{{this.sliderid}}" data-toggle="modal"
                                                data-target="#delete-slider-modal"><i class="fa fa-remove"></i></a>
                                            </td>
                                        </tr>
                                        {{/if}}
                                        {{/each}}
                                    </tbody>
                                </table>
                        </div>

                    </div>
                </div>
            </div>
            <!-- Danh sách slider end -->
        </div>
    </div>
</div>

{{!-- Delete slider hidden form--}}
<form name="delete-slider-form" method="POST"></form>
{{!-- restore slider hidden form--}}
<form name="restore-slider-form" method="POST"></form>

{{!-- Confirm delete slider --}}
<div id="delete-slider-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa vĩnh viễn slider?</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <p>Hành động này không thể khôi phục. Bạn vẫn muốn xóa slider này vĩnh viễn?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btn-delete-slider">Xóa bỏ</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function (e) {
        var sliderId;
        var restoreSliderBtn = $('.btn-restore-slider');
        var btnDeleteSlider = document.getElementById("btn-delete-slider");
        var deleteSliderForm = document.forms["delete-slider-form"];
        var restoreSliderForm = document.forms["restore-slider-form"];

        //Delete slider
        $('#delete-slider-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            sliderId = button.data('id')
        })

        btnDeleteSlider.onclick = function () {
            deleteSliderForm.action = `/slider/${sliderId}/force?_method=DELETE`;
            deleteSliderForm.submit();
        }
        //Restore btn slider click
        restoreSliderBtn.click( function(e){
          e.preventDefault();
          var sliderId = $(this).data('id');
          restoreSliderForm.action= `/slider/${sliderId}/restore?_method=PATCH`;
          restoreSliderForm.submit();
        });
    })
</script>

